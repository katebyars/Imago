<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.imago.ui.ImageDetailFragment">

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="fill_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageImageView"
            android:src="@drawable/waffles"
            android:scaleType="centerCrop" />

        <TextView
            android:background="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user name"
            android:id="@+id/imagePhotographerUserNameTextView"
            android:textStyle="bold" />

         <Button
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_below="@id/imagePhotographerUserNameTextView"
             android:id="@+id/savedButton"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:background="@mipmap/ic_favorite_black_24dp"
             android:backgroundTint="@color/colorAccent"/>
         />

        <TextView
            android:background="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user website"
            android:id="@+id/imagePhotographerwebsiteTextView"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:textStyle="italic" />
        </RelativeLayout>
</FrameLayout>